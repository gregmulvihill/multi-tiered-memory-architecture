# Application settings
APP_NAME=mtma-orchestration-agent
APP_VERSION=0.1.0
ENVIRONMENT=development
LOG_LEVEL=INFO

# API settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_WORKERS=4
API_CORS_ORIGINS=["*"]

# Redis settings (Short-Term Memory)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false

# MongoDB settings (Document Storage)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=mtma

# Neo4j settings (Relationship Storage)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Qdrant settings (Vector Storage)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_API_KEY=
QDRANT_HTTPS=false

# Kafka settings (Event Streaming)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=mtma

# Memory settings
STM_DEFAULT_TTL=3600
STM_MAX_SIZE=10000
LTM_BATCH_SIZE=100
LTM_VECTOR_DIM=384
CONSOLIDATION_THRESHOLD=5
CONSOLIDATION_INTERVAL=300
